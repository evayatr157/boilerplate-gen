// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Template {
  id        String   @id @default(cuid())
  prompt    String   // מחקנו את @unique! עכשיו מותר כפילויות
  s3Url     String
  createdAt DateTime @default(now())
  downloads Int      @default(0)
  
  userId    String?  // המזהה של Clerk
  
  @@index([prompt]) // חיפוש מהיר גלובלי
  @@index([userId]) // שליפה מהירה ל-"פרויקטים שלי"
}